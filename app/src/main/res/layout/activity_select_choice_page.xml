<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aliceblue"
    tools:context=".SelectChoice_Page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgreen"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:text="Select Your Choice "
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/HandHygiene"
                android:layout_width="343dp"
                android:layout_height="279dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                android:layout_gravity="center_horizontal"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <!--android:layout_margin="20dp"
            android:layout_marginTop="60dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"> -->


                <ImageView
                    android:id="@+id/img"
                    android:layout_width="246dp"
                    android:layout_height="230dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/hand_hygiene" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="4dp"
                    android:text="Hand Hygiene"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/BioMedicalWaste"
                android:layout_width="346dp"
                android:layout_height="296dp"
                android:layout_margin="20dp"
                android:layout_marginStart="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                android:layout_gravity="center_horizontal"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">


                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="274dp"
                    android:layout_height="239dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/biomedical_waste" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="-10dp"
                    android:text="Bio Medical Waste Audit"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/logo"
                android:layout_below="@+id/listView"
                android:layout_width="wrap_content"
                android:layout_height="197dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="86dp"
                android:layout_marginBottom="-16dp"
                android:src="@drawable/logo" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>